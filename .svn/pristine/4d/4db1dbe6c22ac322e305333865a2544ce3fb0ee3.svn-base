                                                 txtBegintime.Text,
                                                 txtEndtime.Text,
                                                 "","",
                                                 txtLotid.Text,
                                                 txtPinmin.Text,
                                                 txtType.Text,
                                                 ddlStatus.SelectedValue
                                                 );
        grd.DataSource = dt;
        grd.DataBind();
    }
